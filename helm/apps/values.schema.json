{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tgProxy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "appName": {
          "type": "string",
          "minLength": 1,
          "examples": ["proxy-mtg", "tg-proxy"]
        },
        "namespace": {
          "type": "string",
          "examples": ["app-namespace"]
        },
        "version": {
          "type": "string",
          "minLength": 1,
          "examples": ["2.1.7"],
          "description": "The version of mtg to deploy (https://github.com/9seconds/mtg/releases)"
        },
        "domainName": {
          "type": "string",
          "minLength": 1,
          "examples": ["mtg.example.com"]
        },
        "replicaCount": {
          "description": "Number of replicas for scalability",
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["enabled", "appName", "namespace", "version", "replicaCount"],
      "additionalProperties": false
    },
    "kubeIddqd": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "appName": {
          "type": "string",
          "minLength": 1,
          "examples": ["kube-iddqd"]
        },
        "namespace": {
          "type": "string",
          "examples": ["app-namespace"]
        },
        "nginx": {
          "type": "object",
          "properties": {
            "image": {
              "type": "string",
              "minLength": 1,
              "examples": ["nginx", "ghcr.io/nginxinc/nginx-unprivileged"]
            },
            "tag": {
              "type": "string",
              "minLength": 1,
              "examples": ["1.21.3", "1.27-alpine"]
            }
          },
          "required": ["image", "tag"]
        }
      },
      "required": ["enabled", "appName", "namespace", "nginx"]
    },

    "errorPages": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "appName": {
          "type": "string",
          "minLength": 1,
          "examples": ["app-name"]
        },
        "namespace": {
          "type": "string",
          "examples": ["app-namespace"]
        },
        "version": {
          "type": "string",
          "minLength": 1,
          "examples": ["2.0.0-alpha.13"],
          "description": "The version to deploy (https://github.com/tarampampam/error-pages/releases)"
        },
        "themeName": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["enabled", "appName", "namespace", "version", "themeName"],
      "additionalProperties": false
    },

    "doppler": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "serviceToken": {
          "type": "string",
          "examples": ["dp.st.dev.XXXX"]
        },
        "secrets": {
          "description": "The hashmap, where key may be any string, and value is the name of the secret in Doppler",
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "type": "string",
              "minLength": 1,
              "pattern": "^[a-zA-Z0-9_-]+$",
              "examples": ["DB_NAME", "DB_PASSWORD"]
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    }
  },
  "required": ["tgProxy", "doppler"]
}
